<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 스크롤 가능한 메뉴 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/neutral_background"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <!-- 🔙 뒤로가기 버튼 -->
            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← 뒤로가기"
                android:textColor="@color/button_primary"
                android:background="@android:color/transparent"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginBottom="8dp" />

            <!-- 타이틀 + 언어변경 버튼을 가로로 배치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewMenuTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="가게 메뉴"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/buttonLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌐 LANGUAGE"
                    android:textSize="16sp"
                    android:textColor="@color/button_primary"
                    android:background="@android:color/transparent"
                    android:padding="8dp"/>
            </LinearLayout>

            <!-- 카테고리 버튼 영역 -->
            <LinearLayout
                android:id="@+id/categoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">
                <!-- 동적 생성 카테고리 버튼들 -->
            </LinearLayout>

            <!-- 메뉴 리스트가 들어갈 컨테이너 -->
            <LinearLayout
                android:id="@+id/menuContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- (기존 장바구니 버튼은 삭제, 아래에 고정됨) -->
        </LinearLayout>
    </ScrollView>

    <!-- 🛒 하단 고정 장바구니 버튼 -->
    <Button
        android:id="@+id/buttonGoCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장바구니 보기"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/button_primary"
        android:padding="14dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"/>
</FrameLayout>
